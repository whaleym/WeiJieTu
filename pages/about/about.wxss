page {
    padding-bottom: 70px;
    background-color: #fff;
}

.contactCover {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0,0,0,0.6);
    z-index: 999;
}

.contactMenu {
    position: fixed;
    width: 500rpx;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    background-color: #FFF;
    z-index: 1000;
    text-align: center;
    font-size: 30rpx;
    line-height: 70rpx;
    border-radius: 20rpx;
}

.contactMenu .contact_button {
    text-align: center;
    width: 250rpx;
    height: 80rpx;
    margin: 0 auto;
    line-height: 80rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    font-size: 36rpx;
}

.contactMenu .contact_cancel {
    text-align: right;
    padding-right: 10rpx;
    padding-top: 10rpx;
    line-height: 30rpx;
}

.contactMenu .contact_title {
    font-size: 34rpx;
    margin-top: -30rpx;
}