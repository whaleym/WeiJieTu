/* pages/center/center.wxss */
.selfInfo {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 32vw;
    z-index: 1;
}

.selfInfo .main {
    position: absolute;
    display: flex;
    left: 3vw;
    top: 0;
    width: 94vw;
    height: 102.5%;
    margin: 0 auto;
    justify-content: space-between;
    align-items: center;
    text-align: center;
}

.selfInfo .main>view:nth-of-type(1) {
    padding: 5vw 0;
}

.selfInfo .bg {
    width: 100%;
    height: 100%;
}

.selfInfo .head {
    display: block;
    width: 18vw;
    height: 18vw;
    border: solid 1px #fff;
    border-radius: 50%;
    overflow: hidden;
    position: absolute;
}

.selfInfo .nickName {
    width: 48vw;
    font-size: 34rpx;
    color: #fff;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    position: absolute;
    margin-left: 22vw;
}

.selfInfo .vipIcon {
    width:5.5vw;
    height:7.5vw;
    left:60vw;
    position:absolute;
}

.selfInfo .vipDesc {
    font-size: 34rpx;
    color: #fff;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    position: absolute;
    margin-left: 68vw;    
}

.getVip {
    width:100vw;
    height:12vw;
    margin-top:32.5vw;
    position: fixed;
    background-color:white;
}
.getVip .getVipBg {
    width:100vw;
    height:11vw;
    left:0;
    top:0.5vw;
    position:absolute;
}
.getVip .getVipBtn {
    width:17vw;
    height:7.3vw;
    position:absolute;
    left:73vw;
    top:3vw;
}
.listTitleBg{
    position:fixed;
    margin-top:45vw;
    width:100vw;
    height:8vw;
    background-color:white;
    display:flex;
    align-items:center;
}
.listTitle{
    font-size:34rpx;
    margin-left:3vw;
}
.applist{
    position:fixed;
    margin-top:53.5vw;
    width:100vw;
    height:81.5vw;
    background-color:white;
}
.applistItem{
    width:25vw;
    height:25vw;
    float:left;
    padding:4vw;
    padding-top:9vw;
}
.applistItemImg{
    width:22.3vw;
    height:23.6vw;
    margin-left:2vw;
    margin-top:1.5vw;
}
.bottomBg{
    position:fixed;
    bottom:0;
    width:100vw;
    height:15vw;
    background-color:white;
    display:flex;
    align-items:center;
}
.bottomBg .bottomImg{
    width:100vw;
    height:8.9vw;
    left:0;
    top:0.5vw;
    position:absolute;
}
