page {
    background-color: #f6f6f6;
}

#slide {
    width: 750rpx;
    height: 400rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.notification .notification-text {
    line-height: 1.5;
}

.grids {
}

.grid {
    border-radius: 75rpx;
    position: relative;
    margin: 30rpx 75rpx 0 75rpx;
    width: 100rpx;
    height: 100rpx;
    box-sizing: border-box;
    position: relative;
}

.titleNavContainer{
    display:flex;
    align-items:center;
}

.titleNav{
    float: left;
    padding-left:35rpx;
}

.weui-grid__icon {
    width: 80rpx;
    height: 80rpx;
    padding-top: 20rpx;
}

.weui-grid__label {
    color: #333;
    margin-top: 8px;
    font-size: 10pt;
}

.bigItem image {
    width: 80rpx;
    height: 80rpx;
    margin: 60rpx 0 0 60rpx;
}

.bigItem view {
    color: #fff;
    font-size: 17px;
    margin: 0 0 0 60rpx;
}

.bigItem {
    box-sizing: border-box;
    width: 335rpx;
    height: 250rpx;
    border-radius: 8rpx;
    margin: 20rpx;
    padding: 0;
}

.drawer_content {
    height: 550rpx!important;
}

.drawer_box {
    margin: -150rpx 50rpx 0 50rpx;
}

.jionMini_cover {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 9;
}

.jionMini_dialog {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    text-align: center;
    background-color: transparent;
    z-index: 10;
}

.login_btn{
    background-image:url("https://wsgroup.hmset.com/images/wjtq/share/login_btn.png");
    background-size:191px 65px;
    width:191px;
    height:65px;
    margin-bottom:60px;
    border-radius:20px;
}
.share_btn{
    width:150px;
    height:50px;
    margin-bottom:20px;
    border-radius:10px;
    line-height:50px;
    font-size:40rpx;
}