.WxEmojiView {
    align-items: center;
}

.WxEmojiPreView {
    margin: 20rpx 0;
    padding: 20rpx 0;
    background-color: #efefef;
}

.wxEmoji {
    height: 21px;
    width: 21px;
    vertical-align: middle;
    display: inline-block;
}

.WxEmojiTextarea {
    min-height: 200rpx;
    border: 2rpx solid #eee;
    margin: 10rpx;
    width: 96%;
}

.WxEmojiHiddenTextarea {
    height: 100rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.WxEmojiViewContainer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    z-index: 5;
}

.WxEmojiChooseChooseView {
    display: flex;
    height: 300rpx;
    padding: 20rpx 0;
    padding-left: 15rpx;
    background-color: #fff;
}

.wxPreEmoji {
    height: 60rpx;
    width: 60rpx;
    margin: 10rpx;
    display: inline-flex;
    flex: 1;
}

.backgroundCover {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 2;
}