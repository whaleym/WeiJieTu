.chat-container {
    position: relative;
}

.chat-container__right {
    padding-right: 10rpx;
}

.chat-container__left {
    padding-left: 10rpx;
}

.content-container {
    position: relative;
    border-radius: 9rpx;
    overflow: hidden;
    min-height: 80rpx;
    box-sizing: border-box;
}

.content-container .shade-view {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 9rpx;
    box-sizing: border-box;
    border: 1rpx solid rgba(0,0,0,0.2);
}

.content-container .shade-android {
    border-width: 0;
}

.chat-arrow-border {
    position: absolute;
    z-index: 2;
    width: 12rpx;
    height: 20rpx;
    top: 30rpx;
    background-size: cover;
    background-repeat: no-repeat;
    background-position-y: center;
}

.chat-arrow-border__right {
    right: 0;
    background-position-x: left;
    background-image: url("data:image/svg+xml;base64,");
}

.chat-arrow-border__left {
    left: 0;
    background-position-x: right;
    background-image: url("data:image/svg+xml;base64,");
}

.arrow-border-android {
    background-image: none;
}

.chat-arrow__right {
    position: absolute;
    z-index: 1;
    right: 0;
    top: 18rpx;
    width: 0;
    height: 0;
    border-top: 22rpx solid transparent;
    border-left: 24rpx solid white;
    border-bottom: 22rpx solid transparent;
}

.chat-arrow__left {
    position: absolute;
    z-index: 1;
    left: 0;
    top: 18rpx;
    width: 0;
    height: 0;
    border-top: 22rpx solid transparent;
    border-right: 24rpx solid white;
    border-bottom: 22rpx solid transparent;
}

.space-view {
    width: 1rpx;
    height: 100%;
    float: left;
}

.space-view-vertical {
    width: 100%;
    height: 1rpx;
}

.message-user-avatar {
    width: 80rpx;
    height: 80rpx;
    position: relative;
}

.avatar-left {
    margin: 0 10rpx 0 20rpx;
}

.avatar-right {
    margin: 0 20rpx 0 10rpx;
}

.message-user-avatar image {
    width: 100%;
    height: 100%;
}

.message-user-avatar .avatar-shade {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    z-index: 2;
    background-color: rgba(0,0,0,0.003);
    border: 1rpx solid rgba(0,0,0,0.01);
}

.time-black {
    color: #000;
    background-color: rgba(255,255,255,0.6);
}

.time-white {
    color: #fff;
    background-color: #cecece;
}

.weixin_dialog,.my_weixin_dialog {
    position: relative;
    border-radius: 9rpx;
    background-repeat: no-repeat;
    overflow: hidden;
}

.pic-shade {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 9rpx;
    box-sizing: border-box;
    z-index: 2;
    border: 1rpx solid rgba(0,0,0,0.08);
}

.left-pic-container {
    margin-left: 5px;
}

.right-pic-container {
    margin-right: 5px;
}

.weixin_triangle {
    width: 0px;
    height: 0px;
    border-width: 10.43rpx;
    margin-left: -10.43rpx;
    border-style: solid;
    border-color: transparent #a2e65b transparent transparent;
}